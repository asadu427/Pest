<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sad"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:hint="User Name"
            android:id="@+id/Na"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ema"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:background="@drawable/buttonshape"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Passwor"
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Id"
            android:hint="Enter the ID Number"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="View All Data"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:drawableLeft="@drawable/change"
            android:textColor="#d89917"
            android:background="@drawable/buttonshape" />
        <Button
            android:id="@+id/btnup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Update Data"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_update_24"
            android:textColor="#d89917"
            android:background="@drawable/buttonshape" />
        <Button
            android:id="@+id/btndel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Delete Data"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:textColor="#d89917"
            android:background="@drawable/buttonshape" />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="LOGOUT"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_mood_24"
            android:textColor="#d89917"
            android:background="@drawable/buttonshape" />
    </LinearLayout>
</ScrollView>